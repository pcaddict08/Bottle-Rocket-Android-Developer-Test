<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.StoreDetailsActivity">

    <LinearLayout
        android:id="@+id/baselayout_storedetailsactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_storedetailsactivity"
            android:layout_width="150dip"
            android:layout_height="120dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/cell_shape"
            android:padding="10dip"
            app:srcCompat="@drawable/ic_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/namelabel_storedetailsactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/n_a"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store" />

                <TextView
                    android:id="@+id/storenum_storedetailsactivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_a" />
            </LinearLayout>

            <TextView
                android:id="@+id/phonelabel_storedetailsactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/n_a" />

            <TextView
                android:id="@+id/addresslabel_storedetailsactivity"
                style="u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/n_a" />

            <TextView
                android:id="@+id/address2label_storedetailsactivity"
                style="u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/n_a" />

            <TextView
                android:id="@+id/latlon_storedetailsactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/n_a" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentholder_storedetailsactivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            app:srcCompat="@drawable/ic_map"
            android:layout_margin="20dip"
            android:id="@+id/mapimage_storedetailsactivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </LinearLayout>

</LinearLayout>